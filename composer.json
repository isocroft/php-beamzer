{
  "name": "synergixe/php-beamzer",
	"description": "This is a library that provides support for real-time feeds and notifications for web applications using Server-Sent Events (SSE) and COMET technologies only)",
	"keywords": [
		"ajax long polling", 
		"server-sent events"
	],
	"type": "library",
	"authors": [
		{
			"name": "Ifeora Okechukwu",
			"email": "isocroft@gmail.com"
		}
   ],
    "require-dev": {
           "mockery/mockery":"0.9.*",
           "phpunit/phpunit":"0.1.*",
           "orchestra/testbench":"3.5.*",
           "sjparkinson/static-review":"5.2.*"
	},
  "require":{
          "php":"^5.4",
          "illuminate/notifications":"^5.4",
          "illuminate/support":"^5.3",
	  "illuminate/redis":"^5.4",
	  "illuminate/database":"^5.4",
          "igorw/event-source":"dev-master",
          "illuminate/console":"^5.4",
          "symphony/http-foundation":"dev-master"
  },
  "autoload": {
	"psr-4": {
		"Synergixe\\PHPBeamzer\\": "src/"
	},
	"files": [
		"src/function.php"
	]
  },
  "autoload-dev": {
          "psr-4":{
                "Synergixe\\PHPBeamzer\\Test\\":"tests"
          }
  },
 "config":{
	  "sort-packages":true
 },
 "minimum-stability":"stable",
  "prefer-stable":true,
  "extra": {
        "laravel": {
            "providers": [
                "Synergixe\\PHPBeamzer\\Providers\\Laravel\\BeamzerServiceProvider"
            ]
	}
  },
  "scripts": {
        "tests":"vendor/bin/phpunit",
        "post-install-cmd": [
            	"php bin/beam-script.php",
		"php artisan vendor:publish --tag=config"
        ]
  }
}
